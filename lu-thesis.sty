\definecolor{lundblue}{RGB}{0,0,128}
\definecolor{lundbronze}{RGB}{156,97,20}

\definecolor{codegreen}{rgb}{0,0.5,0}
\definecolor{codegray}{rgb}{0.5,0.5,0.5}
